<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/callLogName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Log Name"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/callLogNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Log Number"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/callLogDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Log Date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/callLogType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Log Type"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>